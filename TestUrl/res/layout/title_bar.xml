<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dip"
    android:background="@drawable/gp_title_backgroud" >


    <LinearLayout
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/logo_text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="6dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/gpjy"
        />
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:focusable="true"
			android:focusableInTouchMode="true"
        >
	        <ImageView
	            android:id="@+id/logo_img_0"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dip"
	            android:scaleType="center"
	            android:layout_marginBottom="0dip"
	            android:src="@drawable/gp_dot"
	        />
	        <ImageView
	            android:id="@+id/logo_img_1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dip"
	            android:scaleType="center"
	            android:layout_marginBottom="0dip"
	            android:src="@drawable/gp_dot"
	        />
	        <ImageView
	            android:id="@+id/logo_img_2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dip"
	            android:scaleType="center"
	            android:layout_marginBottom="0dip"
	            android:src="@drawable/gp_dot"
	        />
	        <ImageView
	            android:id="@+id/logo_img_3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dip"
	            android:scaleType="center"
	            android:layout_marginBottom="0dip"
	            android:src="@drawable/gp_dot"
	        />
	        <ImageView
	            android:id="@+id/logo_img_4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dip"
	            android:scaleType="center"
	            android:layout_marginBottom="0dip"
	            android:src="@drawable/gp_dot"
	        />
	        <ImageView
	            android:id="@+id/logo_img_5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dip"
	            android:scaleType="center"
	            android:layout_marginBottom="0dip"
	            android:src="@drawable/gp_dot"
	        />
	        <ImageView
	            android:id="@+id/logo_img_6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dip"
	            android:scaleType="center"
	            android:layout_marginBottom="0dip"
	            android:src="@drawable/gp_dot"
	        />
	        <ImageView
	            android:id="@+id/logo_img_7"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dip"
	            android:scaleType="center"
	            android:layout_marginBottom="0dip"
	            android:src="@drawable/gp_dot"
	        />
    	</LinearLayout>
     </LinearLayout>      
       
     <LinearLayout android:id="@+id/title_bg"
         android:background="@drawable/gp_search_bg"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="60dip"
         android:paddingLeft="4dip"
         android:paddingRight="4dip"
         android:gravity="center_vertical"
         android:orientation="horizontal"
         >
             <ImageView android:id="@+id/favicon"
                 android:layout_width="20dip"
                 android:layout_height="20dip"
                 android:layout_marginLeft="3dip"
                 android:src="@drawable/gp_search_icon"
                 />
                 
		     <EditText 
		    	 android:id="@+id/url_text"
		    	 android:layout_width="wrap_content"
		    	 android:layout_height="wrap_content"
		    	 android:maxWidth="300dip"
		    	 android:selectAllOnFocus="true"
		    	 android:singleLine="true"
		    	 android:layout_marginLeft="3dip"
		    	 android:layout_weight="1"
				 android:hint="@string/enter"
				 android:background="#00000000"
				 android:ellipsize="end"
		     />            
                 
             <ImageView android:id="@+id/stop"
         	  android:layout_width="wrap_content"
         	  android:layout_height="match_parent"
          	  android:layout_marginRight="3dip"
         	  android:src="@drawable/gp_btn_go_stop"
             />
     </LinearLayout>
     
     <ImageView
          android:id="@+id/rt_btn_browser"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_marginLeft="100dip"
          android:scaleType="center"
          android:layout_marginBottom="4dip"
          android:src="@drawable/rt_btn_browser"
     />

     <ImageView
          android:id="@+id/rt_btn_fav"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_marginLeft="12dip"
          android:scaleType="center"
          android:layout_marginBottom="4dip"
          android:src="@drawable/rt_btn_fav"
     />
     
     <ImageView
          android:id="@+id/rt_btn_message"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_marginLeft="12dip"
          android:scaleType="center"
          android:layout_marginBottom="4dip"
          android:src="@drawable/rt_btn_message"
     />
     
     <ImageView
          android:id="@+id/rt_btn_im"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_marginLeft="12dip"
          android:scaleType="center"
          android:layout_marginBottom="4dip"
          android:src="@drawable/rt_btn_im"
     />   
   </LinearLayout>
</LinearLayout>
