<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="match_parent"
   	android:layout_height="wrap_content"
   	android:orientation="vertical"
   	>    
	<TextView android:id="@+id/news_title"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="?android:attr/textColorPrimary"/>
	<TextView android:id="@+id/news_description"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textColor="?android:attr/textColorSecondary"/>
	<TextView android:id="@+id/news_content"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textColor="?android:attr/textColorSecondary"/>
	<LinearLayout
	   	android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
	   	android:orientation="horizontal"
	   	>
		<TextView android:id="@+id/news_source"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:textColor="?android:attr/textColorTertiary"/>
		<TextView android:id="@+id/news_date"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:textColor="?android:attr/textColorTertiary"
		    android:gravity="right"/>
	</LinearLayout>
	
	<LinearLayout
	   	android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
	   	android:orientation="horizontal"
	   	android:layout_gravity="bottom"
	   	>
		<ImageView android:id="@+id/news_rtn_add"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:background="@drawable/news_rtn_add"
		/>
		<ImageView android:id="@+id/news_rtn_clear"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:background="@drawable/news_rtn_clear"
		    android:visibility="gone"
		/>
		<ImageView android:id="@+id/news_rtn_font"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:background="@drawable/news_rtn_font"
		    android:gravity="right"
		/>
	</LinearLayout>
	
	<!-- invisible view -->
	<TextView android:id="@+id/news_id"
		android:layout_width="match_parent" 
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceSmall"
	    android:visibility="gone"/>
</LinearLayout>
